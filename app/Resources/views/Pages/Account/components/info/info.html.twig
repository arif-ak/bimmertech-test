                <section-field label="VAT number" v-model="vat" inline-template>
                    {% include ':GlobalComponents/Field:_field.html.twig' %}
                </section-field>
            </div> #}
        </div>
    </div>
    <div class="button customButton"><button @click="checkFields()" type="submit" class="bt-button primary"><span>Save Changes</span></button></div>
    <div class="ui bt modal contactDetails">
        <div class="h5 text-center bt-heading">
            <div class="message">Your account has been successfully updated.</div>
            <div class="bt-icon black bt-close"></div>
        </div>
    </div>
</div>