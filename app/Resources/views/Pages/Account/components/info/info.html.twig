                    {% include ':GlobalComponents/Field:_field.html.twig' %}
                </section-field>
            </div>
        </div>
        <div class="ui">
            <div class="two fields">
                <section-field :error="errors.email" required label="Email" v-model="email" inline-template>
                    {% include ':GlobalComponents/Field:_field.html.twig' %}
                </section-field>
                <section-field :error="errors.phone" required label="Phone number" v-model="phone" inline-template>
                    {% include ':GlobalComponents/Field:_field.html.twig' %}
                </section-field>
            </div>
            <div class="two fields">
                {# <section-field :error="errors.birthday" required label="Birthday" date v-model="birthday" inline-template>
