{% extends '@SyliusShop/layout.html.twig' %}

{% block breadcrumb %}
    <div class="ui breadcrumb">
        <a href="{{ path('sylius_shop_homepage') }}" class="section">{{ 'sylius.ui.home'|trans }}</a>
        <div class="divider"> /</div>
        <div class="active section">Tracking delivery</div>
    </div>
{% endblock %}

{% block content %}
     {% if checkpoints is defined and checkpoints is not null %}
         <table class="ui celled table">
             <thead>
             <tr>
                 <th>Date</th>
                 <th>Location</th>
                 <th>Message</th>
             </tr>
             </thead>
             <tbody>
             {% for checkpoint in checkpoints %}
                 <tr>
                     <td>{{ checkpoint['checkpoint_time'] | date("d-m-Y H:i:s") }}</td>
                     <td>{{ checkpoint['location'] }}</td>
                     <td>{{ checkpoint['message'] }}</td>
                 </tr>
             {% endfor %}
             </tbody>
         </table>
     {% elseif message %}
         <p style="text-align: center; font-size: 17px;">
             {{ message }}
         </p>
    {% else %}
        <p style="text-align: center; font-size: 17px;">
            Tracking number: {{ trackingNumber }} not found
        </p>
    {% endif %}
 {% endblock %}