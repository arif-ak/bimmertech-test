<div class="bt-section-recommended small-12" v-if="recomended.length>0">
    <section-min-header inline-template label="You might be interested in">
        {% include ':GlobalComponents/MinHeader:minHeader.html.twig' %}
    </section-min-header>
    
    <div :id="swiperId" class="swiper-container" :class="{'little': !swiper}">
        <div class="swiper-wrapper">
            <div class="swiper-slide" v-for="slide in filteredRecomended">
                <div class="bt-card" >
                    <a :href="slide.slug" class="dimmable image" :id="swiperId" v-bt-card-hover>
                        <div class="bt-card-shadow">
                            <img src="" :data-src="slide.image" :alt="slide.name" style="height: 180px; object-fit: cover; border: none;" class="image" v-img-loader />
                            {# <img :src="slide.image" :alt="slide.name" style="height: 180px; object-fit: cover; border: none;" class="image" /> #}
                        </div>
                        <div class="ui dimmer">
                            <div class="content">
                                <div class="center">
                                    <h5 class="header">[[slide.name]]</h5>
                                    <span class="new-dollar-sign price">[[slide.price | price]]</span>
                                </div>
                            </div>
                        </div>
                        <h5 class="header transition sylius-product-name">[[slide.name]]</h5>
                    </a>
                </div>
            </div>
        </div>
        <!-- If we need navigation buttons -->
        <div v-show="swiper" class="swiper-button-prev arrow-prev"></div>
        <div v-show="swiper" class="swiper-button-next arrow-next"></div>
    </div>
</div>