{% set enabled = order.payments|length %}

<div class="ui two column grid">
    <div class="column">
        {% if order.hasTax %}
            <a href="{{ path('sylius_shop_checkout_taxes_select') }}" class="ui large icon labeled button"><i class="arrow left icon"></i> Back to taxes</a>
        {% else %}
            <a href="{{ path('sylius_shop_checkout_address') }}" class="ui large icon labeled button"><i class="arrow left icon"></i> {{ 'sylius.ui.change_address'|trans }}</a>
        {% endif %}
    </div>
    <div class="right aligned column">
        <button type="submit" id="next-step" class="ui  icon button checkoutBtn{% if not enabled %} disabled{% endif %} button">
                    {{ 'sylius.ui.next'|trans }}
        </button>
    </div>
</div>
