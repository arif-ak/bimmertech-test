            {% include ':GlobalComponents/MinHeader:minHeader.html.twig' %}
        </section-min-header>
        {{ sonata_block_render_event('sylius.shop.product.show.tab_details', {'product': product}) }}
        <div class="section-custom">
            {{ ((product.installer|postContent())|popup(popup_options))|raw }}
        </div>
    </div>
{% endif %}